<!DOCTYPE html>
<html lang='en'>
  <head>
    <title>TinyApp</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" 
    integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <style>
      label.register{
        display: table-cell;
      }
      input.register{
        width: 300px;
        display: table-cell;
      }
    </style>
  </header>
  <body style='font-size:20px; padding:50px;'>
    <header>
      <% include partials/_header %>
    </header>
    <h3 class="text-center"><strong>Create an account</strong></h3>
    <br>
    <div class="text-center center-block">
    <form action='/register' method='POST'>
      <label for='email'>Email:&emsp;&emsp;</label>
      <input id='email' type='text' name='email' placeholder='you@example.com'>
      <br>
      <label for='pass'>Password:</label>
      <input id='pass' type='text' name='pass' placeholder='password'>
      <br>
      <br>
      <input class="btn btn-primary" type='submit' value='Submit'>
    </form>
    <% if (registerError !== undefined) { %>
      <p style = "color:red;"><%= registerError %></p>
    <% } %>
    </div>
  </body>
</html>