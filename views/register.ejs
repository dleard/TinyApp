<!DOCTYPE html>
<html lang='en'>
  <head>
    <title>TinyApp</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" 
    integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <style>
      label.register{
        display: table-cell;
      }
      input.register{
        width: 300px;
        display: table-cell;
      }
    </style>
  </header>
  <body style='font-size:20px; padding:50px;'>
    <header>
      <% include partials/_header %>
    </header>
    <br>
    <h3>Create an account</h3>
    <form action='/register' method='POST'>
      <label class='register' for='email'>Email:</label>
      <input class='register' id='email' type='text' name='email' placeholder='you@example.com'>
      <br>
      <label class='register' for='pass'>Password:</label>
      <input class='register' id='pass' type='text' name='pass' placeholder='password'>
      <br>
      <input type='submit' value='Submit'>
    </form>
    <% if (registerError !== undefined) { %>
      <p style = "color:red;"><%= registerError %></p>
    <% } %>
  </body>
</html>